{
  "$schema": "https://json.schemastore.org/schema-catalog.json",
  "version": 1,
  "schemas": [
    {
      "name": "OWML Mod Config",
      "description": "Describes a mod config for the Outer Wilds Mod Loader",
      "fileMatch": ["config.json"],
      "url": "https://raw.githubusercontent.com/ow-mods/owml/master/schemas/config_schema.json"
    },
    {
      "name": "OWML Mod Manifest",
      "description": "Describes a mod manifest for the Outer Wilds Mod Loader",
      "fileMatch": ["manifest.json"],
      "url": "https://raw.githubusercontent.com/ow-mods/owml/master/schemas/manifest_schema.json"
    },
    {
      "name": "New Horizons Planet",
      "description": "Describes a planet config for the New Horizons framework",
      "fileMatch": ["planets/**.json", "planets/**.jsonc"],
      "url": "https://raw.githubusercontent.com/Outer-Wilds-New-Horizons/new-horizons/main/NewHorizons/Schemas/body_schema.json"
    },
    {
      "name": "New Horizons System",
      "description": "Describes a star system config for the New Horizons framework",
      "fileMatch": ["systems/**.json", "systems/**.jsonc"],
      "url": "https://raw.githubusercontent.com/Outer-Wilds-New-Horizons/new-horizons/main/NewHorizons/Schemas/system_schema.json"
    },
    {
      "name": "New Horizons Translation",
      "description": "Describes a translation config for the New Horizons framework",
      "fileMatch": ["translations/*.json", "translations/*.jsonc"],
      "url": "https://raw.githubusercontent.com/Outer-Wilds-New-Horizons/new-horizons/main/NewHorizons/Schemas/translation_schema.json"
    },
    {
      "name": "New Horizons Addon Manifest",
      "description": "Describes an addon manifest for the New Horizons framework",
      "fileMatch": ["addon-manifest.json", "addon-manifest.jsonc"],
      "url": "https://raw.githubusercontent.com/Outer-Wilds-New-Horizons/new-horizons/main/NewHorizons/Schemas/addon_manifest_schema.json"
    },
    {
      "name": "New Horizons Title Screen",
      "description": "Describes a title screen config for the New Horizons framework",
      "fileMatch": ["title-screen.json", "title-screen.jsonc"],
      "url": "https://raw.githubusercontent.com/Outer-Wilds-New-Horizons/new-horizons/main/NewHorizons/Schemas/title_screen_schema.json"
    },
    {
      "name": "Thunderstore Manifest",
      "description": "Describes a manifest for Thunderstore",
      "fileMatch": ["manifest.json"],
      "url": "https://raw.githubusercontent.com/MegaPiggy/thunderstore.manifest/main/v1/schema.json"
    },
    {
      "name": "r2modman Manifest",
      "description": "Describes a manifest for r2modman",
      "fileMatch": ["manifest.json"],
      "url": "https://raw.githubusercontent.com/MegaPiggy/thunderstore.manifest/main/v1/r2modman/schema.json"
    }
  ]
}
